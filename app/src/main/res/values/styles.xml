<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/transparent_grey</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="quadraticImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">1%</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small"/>

    <style name="RatingbarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/transparent_grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

</resources>