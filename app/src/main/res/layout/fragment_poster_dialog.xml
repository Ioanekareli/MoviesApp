<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dialogPoster"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/quadraticImageView"
        app:strokeWidth="0.5dp"
        android:elevation="8dp"
        app:strokeColor="@color/transparent_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/downloadButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:alpha="0.5"
        android:background="@drawable/download_button_style"
        android:elevation="8dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Download"
        android:textColor="@color/header_grey"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogPoster" />

</androidx.constraintlayout.widget.ConstraintLayout>