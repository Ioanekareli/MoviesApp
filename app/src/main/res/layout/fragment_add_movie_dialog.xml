<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_grey"
    tools:context=".common.presentation.moviedetails.addmoviedialog.AddMovieDialogFragment">

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rateMovieBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:theme="@style/RatingbarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/header_grey"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Add Movie"
        android:textColor="@color/transparent_grey"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/rateMovieBar"
        app:layout_constraintStart_toStartOf="@+id/rateMovieBar"
        app:layout_constraintTop_toBottomOf="@+id/rateMovieBar" />

</androidx.constraintlayout.widget.ConstraintLayout>